  <div class="container">
    <div class="card-flat">
      <div class="card-body">
        <div id="hero-carousel" class="carousel slide carousel-fade card" data-ride="carousel">
          <div class="carousel-caption d-none d-md-block"></div>
          <div class="carousel-inner">
            <% @places.each_with_index do |place,index| %>
              <% if index == 0 %>
                <div class="carousel-item active">
                  <img class="d-block w-100" src="<%= place.image_uri %>" alt="<%= place.name %>">
                  <div class="carousel-caption d-none d-md-block">
                    <h3><%= place.name %></h3>
                  </div>
                </div>
              <%else%>
                <div class="carousel-item">
                  <img class="d-block w-100" src="<%= place.image_uri %>" alt="<%= place.name %>">
                  <div class="carousel-caption d-none d-md-block">
                    <h3><%= place.name %></h3>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#hero-carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#hero-carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <div class="simple-space"></div>
        <div class="container">
          <div class="row">
            <div class="col">
              <div class="card border-info">
                <div class="card-header card-header-danger mx-auto">
                  <h4 class="card-title">Newest Place</h4>
                </div>
                <div class="card-body">
                  <p class="card-text">
                    <% p = Place.last %> 
                    <%= link_to p.name, place_path(p), {class: "link_to"} %>
                    <p>
                    <%= p.description %>
                    </p>
                  </p>
                </div>
              </div>
            </div>
            <div class="col">
              <div class="card border-info">
                <div class="card-header card-header-danger mx-auto">
                  <h4 class="card-title">Newest Event</h4>
                </div>
                <div class="card-body">
                  <p class="card-text">
                    <% e = Event.last %> 
                    <%= link_to e.name, event_path(e), {class: "link_to"} %>
                    <p>
                    <%= e.description %>
                    </p>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
