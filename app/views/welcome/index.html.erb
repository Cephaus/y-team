<div class="container">
  <div id="hero-carousel" class="carousel slide carousel-fade card" data-ride="carousel">
    <div class="carousel-caption d-none d-md-block">
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="<%= asset_path "bg.jpg" %>" alt="First slide">
        <div class="carousel-caption d-none d-md-block">
          <h4>GNX Xplorer</h4>
          <p>Gainesville's best places!</p>
        </div>
      </div>
      <% @places.each do |place| %>
        <div class="carousel-item">
          <img class="d-block w-100" src="<%= place.image_uri %>" alt="<%= place.name %>">
          <div class="carousel-caption d-none d-md-block">
            <h4><%= place.name %></h4>
            <p>Some kind of description. prob need to limit chars.</p>
          </div>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#hero-carousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#hero-carousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <div class="container">
    <div class="row">
      <div class="col">
        <div class="card">
          <div class="card-header card-header-danger">
            <h4 class="card-title">Top Ten Places</h4>
            <p class="category">Category subtitle</p>
          </div>
          <div class="card-body">
            <h4 class="card-title"></h4>
            <h6 class="card-subtitle mb-2 text-muted"></h6>
            <p class="card-text">
