  <div class="container">
    <div class="card-flat">
      <div class="card-body">
        <div id="hero-carousel" class="carousel slide carousel-fade card" data-ride="carousel">
          <div class="carousel-caption d-none d-md-block"></div>
          <div class="carousel-inner">
            <% @places.each_with_index do |place,index| %>
              <% if index == 0 %>
                <div class="carousel-item active">
                  <img class="d-block w-100" src="<%= place.image_uri %>" alt="<%= place.name %>">
                  <div class="carousel-caption-2 d-none d-md-block">
                    <h1>GNV Xplorer</h1>
                    <p>Gainesville's best places!</p>
                  </div>
                  <div class="carousel-caption d-none d-md-block">
                    <h4><%= place.name %></h4>
                    <p>Gainesville's best places!</p>
                  </div>
                </div>
              <%else%>
                <div class="carousel-item">
                  <img class="d-block w-100" src="<%= place.image_uri %>" alt="<%= place.name %>">
                  <div class="carousel-caption d-none d-md-block">
                    <h4><%= place.name %></h4>
                    <p>Some kind of description. prob need to limit chars.</p>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#hero-carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#hero-carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <div class="simple-space"></div>
        <div class="container">
          <div class="row">
            <div class="col">
              <div class="card border-info">
                <div class="card-header card-header-danger mx-auto">
                  <h4 class="card-title">Newest Place</h4>
                  <!-- <p class="category">Category subtitle</p> -->
                </div>
                <div class="card-body text-info">
                  <h4 class="card-title"></h4>
                  <h6 class="card-subtitle mb-2 text-muted"></h6>
                  <p class="card-text">
                    <table>
                      <tr>
                        <th>Name</th>
                        <th>Description</th>
                      </tr>
                      <% p = Place.last %>
                        <tr>
                          <td>
                            <%= link_to p.name, place_path(p), {class: "link_to"} %>
                          </td>
                          <td>
                          <%= p.description %>
                          </td>
                        </tr>

                    </table>
                  </p>
                </div>
              </div>
            </div>
            <div class="col">
              <div class="card border-info">
                <div class="card-header card-header-danger mx-auto">
                  <h4 class="card-title mx-auto">Newest Event</h4>
                  <!-- <p class="category">Events</p> -->
                </div>
                <div class="card-body text-info">
                  <h4 class="card-title"></h4>
                  <h6 class="card-subtitle mb-2 text-muted"></h6>
                  <p class="card-text">
                    <table>
                      <tr>
                        <th>Name</th>
                        <th>Description</th>
                      </tr>
                      <% e = Event.last %>
                        <tr>
                          <td>
                            <%= link_to e.name, place_path(e), {class: "link_to"} %>
                          </td>
                          <td>
                          <%= e.description %>
                          </td>
                        </tr>
                    </table>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
